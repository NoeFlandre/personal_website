---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Noé Flandre",
      url: "https://noeflandre.github.io/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Noé Flandre",
      logo: {
        "@type": "ImageObject",
        url: "https://noeflandre.github.io/noe-avatar.jpg",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://noeflandre.github.io/noe-avatar.jpg",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Noé Flandre",
    url: "https://noeflandre.github.io",
    image: "https://noeflandre.github.io/noe-avatar.jpg",
    sameAs: [
      "https://github.com/NoeFlandre",
      "https://x.com/NoeFlandre",
      "https://huggingface.co/NoeFlandre",
    ],
    jobTitle: "AI Research Engineer, vibe-learning",
    description:
      "AI Research Engineer, vibe-learning. Daily meal : curating datasets and training models",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Noé Flandre",
    url: "https://noeflandre.github.io",
    description:
      "AI Research Engineer, vibe-learning. Daily meal : curating datasets and training models",
    author: {
      "@type": "Person",
      name: "Noé Flandre",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://noeflandre.github.io/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />